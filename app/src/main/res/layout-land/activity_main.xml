<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/fon"
    tools:context=".ui.CalculatorActivity">

    <TextView
        android:id="@+id/display"
        android:background="@color/grey"
        android:text="@string/_0"
        style="@style/StyleDisplay"

        />
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_clean"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:text="@string/_clean"
            style="@style/StyleButtonOperator" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_delete"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:text="@string/_delete"
            style="@style/StyleButtonOperator"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_percent"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:text="@string/_percent"
            style="@style/StyleButtonOperator"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_divide"
            android:layout_row="0"
            android:layout_column="4"
            android:layout_columnWeight="1"
            android:text="@string/_divide"
            style="@style/StyleButtonOperator"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_1"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:text="@string/_1"
            style="@style/StyleButtonDigit" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_2"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:text="@string/_2"
            style="@style/StyleButtonDigit"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_3"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:text="@string/_3"
            style="@style/StyleButtonDigit"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_multiplication"
            android:layout_row="1"
            android:layout_column="4"
            android:layout_columnWeight="1"
            android:text="@string/_multiplication"
            style="@style/StyleButtonOperator"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_4"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:text="@string/_4"
            style="@style/StyleButtonDigit"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_5"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:text="@string/_5"
            style="@style/StyleButtonDigit"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_6"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:text="@string/_6"
            style="@style/StyleButtonDigit"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_addition"
            android:layout_row="2"
            android:layout_column="4"
            android:layout_columnWeight="1"
            android:text="@string/_addition"
            style="@style/StyleButtonOperator"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_7"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:text="@string/_7"
            style="@style/StyleButtonDigit"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_8"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:text="@string/_8"
            style="@style/StyleButtonDigit"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/margin_button"
            android:background="@color/white"
            android:text="@string/_9"
            android:textColor="@color/black"
            android:textSize="@dimen/button_text"
            style="@style/StyleButtonDigit"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_subtract"
            android:layout_row="3"
            android:layout_column="4"
            android:layout_columnWeight="1"
            android:text="@string/_subtract"
            style="@style/StyleButtonOperator"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_0"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:text="@string/_0"
            style="@style/StyleButtonDigit"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_point"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:text="@string/point"
            style="@style/StyleButtonOperator"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_equals"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:text="@string/equals"
            style="@style/StyleButtonOperator"/>

        <RadioGroup
            android:id="@+id/radioButtons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/grey"
            android:layout_column="5"
            android:layout_row="0"
            android:layout_rowSpan="4"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_vertical"
            >
            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/radioButtonBase"
                android:layout_weight="1"
                android:text="@string/style_base"
                style="@style/StyleRadioButton"
                android:fontFamily="@font/font_base"
                />
            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/radioButtonStyle1"
                android:layout_weight="1"
                android:text="@string/style1"
                style="@style/StyleRadioButton"
                android:fontFamily="@font/font1"/>

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/radioButtonStyle2"
                android:layout_weight="1"
                android:text="@string/style2"
                style="@style/StyleRadioButton"
                android:fontFamily="@font/font2"/>

        </RadioGroup>

    </GridLayout>

</LinearLayout>