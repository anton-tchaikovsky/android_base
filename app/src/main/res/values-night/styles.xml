<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="StyleButtonDigit" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/button_text</item>
        <item name="backgroundTint">@color/black</item>
        <item name="fontFamily">@font/font1</item>

    </style>

    <style name="StyleButtonOperator">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_button</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">@dimen/button_text</item>
        <item name="backgroundTint">@color/black</item>
        <item name="fontFamily">@font/font2</item>

    </style>

    <style name="StyleDisplay">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/padding_text_view</item>
        <item name="android:paddingEnd">@dimen/padding_text_view</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_display</item>
        <item name="android:background">@color/grey_black</item>
        <item name="android:gravity">end|center_vertical</item>
        <item name="fontFamily">@font/font2</item>

    </style>



</resources>