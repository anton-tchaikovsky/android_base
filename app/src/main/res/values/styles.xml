<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="StyleButtonDigit">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_button</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/button_text</item>
        <item name="backgroundTint">#FF6200EE</item>

    </style>

    <style name="StyleButtonOperator">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_button</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">@dimen/button_text</item>
        <item name="backgroundTint">#FF6200EE</item>


    </style>

    <style name="StyleDisplay">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart" >@dimen/padding_text_view</item>
        <item name="android:paddingEnd" >@dimen/padding_text_view</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_display</item>
        <item name="android:background">@color/grey</item>
        <item name="android:gravity">end|center_vertical</item>

    </style>

    <style name="StyleRadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_radio_button</item>

    </style>


</resources>